<form-validation>


    <!-- ========== Default Language Form Definitions ===================== -->
    <formset>
        <form name="newVisitForm">
        	<field property="yyyy" depends="required">
             	<arg0 key="test yyyy" resource="false"/>
        	</field>
        </form>
        <form name="signatureForm">
        	<field property="loginID" depends="required">
        	</field>
        	<field property="password" depends="required">
        	</field>        	
        </form>
        

    </formset>
</form-validation>