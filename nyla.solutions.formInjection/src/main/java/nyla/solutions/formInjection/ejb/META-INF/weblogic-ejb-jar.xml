<?xml version="1.0"?>
<!DOCTYPE weblogic-ejb-jar PUBLIC '-//BEA Systems, Inc.//DTD WebLogic 8.1.0 EJB//EN' 'http://www.bea.com/servers/wls810/dtd/weblogic-ejb-jar.dtd'>
<weblogic-ejb-jar>
	<weblogic-enterprise-bean>
		<ejb-name>form_ejb</ejb-name>
		<transaction-descriptor>
		   <!-- 4 minute timeout -->
			<trans-timeout-seconds>240</trans-timeout-seconds>
		</transaction-descriptor>
		<enable-call-by-reference>True</enable-call-by-reference>
		<clients-on-same-server>True</clients-on-same-server>
		<jndi-name>/gcsm/form/FormBeanHomeRemote</jndi-name>
		<local-jndi-name>/gcsm/form/FormBeanHomeLocal</local-jndi-name>
		   <!-- 4 minute timeout -->		
		<remote-client-timeout>240</remote-client-timeout>
	</weblogic-enterprise-bean>
</weblogic-ejb-jar>
